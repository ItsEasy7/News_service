FROM golang:1.21-alpine AS builder

COPY go.mod go.sum ./
RUN go mod download

WORKDIR /app
COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o main ./cmd/news/main.go

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/main .
COPY --from=builder /app/configs ./configs

EXPOSE 8080

CMD ["./main"]